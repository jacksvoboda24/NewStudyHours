@page
@model PhiKapStudyHours.Pages.HCI.HomeModel
@{
}
<link rel="stylesheet" href="~/css/site.css">

<body class="PhiKapp">
    <h1>Active Member Home Page for @Model.user</h1>
    <div>
        <a class="btn PhiKapp2"
           asp-page="./StudyHours">
            Create a new Entry
        </a>
    </div>
    <div>Or Edit a Previoous Entry:
        <form method="post">
            <select class="PhiKapp2" asp-for="@Model.edit_entry">
                @foreach (var entry in Model.entries)
                {
                    <option>
                        @entry.Hours Hours | @entry.Name | @entry.Date.ToString("ddd d MMM")
                    </option>
                }
            </select>
            <button type="submit" class="btn btn-primary mt-2">Edit</button>
        </form>
    </div>
</body>